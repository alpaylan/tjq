{
  "name": "tjq-language-support",
  "displayName": "TJQ Language Support",
  "description": "Language support for tjq with syntax highlighting, completion, and diagnostics",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tjq"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tjq",
        "aliases": ["TJQ", "tjq"],
        "extensions": [".tjq", ".jq"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tjq",
        "scopeName": "source.tjq",
        "path": "./syntaxes/tjq.tmGrammar.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "TJQ Language Server",
      "properties": {
        "tjq.server.path": {
          "type": "string",
          "default": "",
          "description": "Path to the tjq language server executable"
        },
        "tjq.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}